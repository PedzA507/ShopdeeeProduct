<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/img_8"
    android:padding="30dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="248dp"
        android:layout_height="295dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageViewFile"
            android:layout_width="245dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext4"
            android:gravity="center"
            android:padding="10dp"
            android:text="กางแกงขายาว"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtProductDetail"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext5"
        android:gravity="center"
        android:padding="20dp"
        android:text="สีขาว ผ้ายืด ขนาด M"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="203dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext4"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnRemoveProduct"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="-"
            android:textColor="#4800ff"
            android:textSize="20sp"
            app:backgroundTint="#f2f2f2" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:padding="10dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_cart"
            android:text="+"
            android:textColor="#4800ff"
            android:textSize="20sp"
            app:backgroundTint="#f2f2f2" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="เพิ่มไปยังตะกร้า"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background ="@drawable/button_cart"
        android:gravity="center"/>

</LinearLayout>
